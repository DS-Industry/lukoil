{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["react-app", "react-app/jest", "plugin:prettier/recommended"],
	"plugins": ["prettier"],
	"rules": {
		"react-hooks/exhaustive-deps": "off",
		"prettier/prettier": [
			"error",
			{
				"printWidth": 80,
				"singleQuote": true,
				"tabWidth": 2,
				"useTabs": true,
				"trailingComma": "es5",
				"bracketSpacing": true,
				"semi": true
			}
		]
	}
}
